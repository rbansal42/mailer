    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "@types/express": "^5.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node-cron": "^3.0.11",
    "@types/cors": "^2.8.17",
    "typescript": "^5.7.3"
  }
}
