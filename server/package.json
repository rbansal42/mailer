{
  "name": "server",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "mkdir -p dist/assets && cp -r assets/fonts dist/assets/ && bun run --watch src/index.ts",
    "build": "bun build src/index.ts --target=bun --outdir=dist && mkdir -p dist/assets && cp -r assets/fonts dist/assets/",
    "start": "bun run dist/index.js",
    "db:migrate": "bun run src/db/migrate.ts"
  },
  "dependencies": {
    "@react-pdf/font": "^4.0.4",
    "@react-pdf/renderer": "^4.3.2",
    "@types/multer": "^2.0.0",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^7.0.0",
    "@types/bun": "^1.1.14",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "typescript": "^5.7.3"
  }
}
